/***
 * SearchWin.css
 */ 
 .searchBox{
	/*
left:13%;
	top:20%;
*/
	background: #D2B89C;
	width: 550px;
	height: auto;
	padding: 5px;
}
.searchBox label {
	text-transform: uppercase;
	color: #291f1a;
	display: block;
}
.search_button{
	display: inline;
	margin-left: 10px;
	
}
.searchTable_body{
	background: #d2b89c;
}
.searchTable_input{
	border: groove 2px #291f1a;
	display: block;
	position: relative;
}
.searchTable_button{
	background: #985434;
	color: #291f1a;
	border: 2.5px groove #291f1a;
	height: 10px;
	width: 18px;
}
.searchTable_button:hover{
	color: #FFFFFF;
}
.searchTable_infoHeader{
	color: #291f1a;
	background: #291f1a;
	border-bottom: 2.5px solid #291f1a;
	float: right;
}
.listBox {
	float: left;
	width: 500px;
	background: #fff;
	border: 1px solid #d2b89c;
	margin: 0;
	padding: 0;
	list-style: none;
	margin-bottom: 10px;
	height: 216px;
	overflow: auto;
}
.listItem, .authItem_selected{
	display: block;
	font-family: Verdana, Helvetica, Arial;
	font-size: 12px;
	padding: 5px;
	color: #555;
	border-bottom: 1px solid #d2b89c;
}
.listItem:hover, .authItem_selected:hover {
	background-color: #e9dab9;
}
.listText{
	color: black;
}
.searchTable_selectfile:hover{
	background: #d2b89c;
}
.searchTable_selectfileCheck{
	display: block;
	font-family: Verdana, Helvetica, Arial;
	font-size: 12px;
	padding: 1em;
	border-bottom: #291f1a solid 2.5px;
	border-top: #291f1a solid 2.5px;
	background: #985434;
}
.searchTable_drop{
	display: block;
	position: relative;
	background-color: #985434;
	width: 400px;
	
}
.searchTable_radio{
	display: block;
	
}
.searchTable_radio:checked{
	background-color: red;
}

